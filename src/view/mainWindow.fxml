                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Export portfolio" onAction="#exportPortofolioCoins" />
                        <MenuItem mnemonicParsing="false" text="Preferencesâ€¦" onAction="#showPreferencesAction"/>
